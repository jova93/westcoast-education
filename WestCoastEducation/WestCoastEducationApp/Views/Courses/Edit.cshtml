@model WestCoastEducationApp.ViewModels.EditCourseViewModel

<form asp-controller="Courses" asp-action="Edit" method="POST">
  <div class="card">
    <div class="card-header">
      <h4>Edit</h4>
    </div>
    <div class="card-body p-3">
      <div class="mb-3">
        <label class="form-label" asp-for="Number"></label>
        <input class="form-control" asp-for="Number" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Level"></label>
        <input class="form-control" asp-for="Level" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="IsActive"></label>
        <input class="form-control" asp-for="IsActive" />
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>